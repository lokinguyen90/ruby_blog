<% @post.tags.build %>
<%= form_for(@post) do |post_form| %>
  <% if @post.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="field">
    <div style="float:left; width:5%"><%= post_form.label :name %></div>
    <div style="float:left; margin-left:5px;"><%= post_form.text_field :name %></div>
    <div style="clear:both;height:5px;"></div>
  </div>
  <div class="field">
     <div style="float:left; width:5%"><%= post_form.label :title %></div>
     <div style="float:left; margin-left:5px;"><%= post_form.text_field :title %></div>
     <div style="clear:both;height:5px;"></div>
  </div>
  <div class="field">
    <div style="float:left; width:5%"><%= post_form.label :content %></div>
    <div style="float:left; margin-left:5px;"><%= post_form.text_area :content, :style => "width:500px; height:80px;" %></div>
      <div style="clear:both;height:5px;"></div>
  </div>
  <%= render :partial => 'tags/form',
             :locals => {:form => post_form} %>
  <div class="actions">
    <%= post_form.submit "Save" ,:class => "btn btn-primary" %>
  </div>
<% end %>
