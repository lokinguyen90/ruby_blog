<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div style="float:left; width:10%"><%= f.label :commenter %></div>
    <div style="float:left; margin-left:5px;"><%= f.text_field :commenter %></div>
    <div style="clear:both;height:5px;"></div>
  </div>
  <div class="field">
     <div style="float:left; width:10%"><%= f.label :body %></div>
    <div style="float:left; margin-left:5px;"><%= f.text_area :body , :style => "width:500px; height:80px;" %></div>
      <div style="clear:both;height:5px;"></div>
  </div>
  <div class="actions">
    <%= f.submit "Save",:class => "btn btn-primary" %>
  </div>
<% end %>